        <TextBox x:Name="TXT_DESTINO1" HorizontalAlignment="Left" Height="50" Margin="1471,142,0,0" TextWrapping="Wrap" Text="{x:Null}" VerticalAlignment="Top" Width="91" FontSize="36" IsEnabled="False"/>

