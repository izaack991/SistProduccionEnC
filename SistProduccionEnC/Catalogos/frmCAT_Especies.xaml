        mc:Ignorable="d"
        Title="frmCAT_Especies" Height="900" Width="1600">
    <Grid Background="LightGray">
        <Label x:Name="LBL_NOMBRE" Content="Nombre" HorizontalAlignment="Left" Margin="50,185,0,0" VerticalAlignment="Top" FontSize="72"/>
        <TextBox x:Name="TXT_NOMBRE" HorizontalAlignment="Left" Height="106" Margin="350,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1182"/>
        <Label x:Name="LBL_ESTATUS" Content="Estatus" HorizontalAlignment="Left" Margin="50,369,0,0" VerticalAlignment="Top" FontSize="72" Width="273"/>

        <dxe:FlyoutControl Content="FlyoutControl" HorizontalAlignment="Left" Height="100" Margin="318,808,0,-39" VerticalAlignment="Top" Width="100"/>
        <dxe:FlyoutControl Content="FlyoutControl" HorizontalAlignment="Left" Height="100" Margin="498,783,0,-14" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="TXT_ESTATUS" HorizontalAlignment="Left" Margin="350,369,0,0" VerticalAlignment="Top" Width="500" Height="106" IsSynchronizedWithCurrentItem="True"/>
        <dxe:FlyoutControl Content="FlyoutControl" HorizontalAlignment="Left" Height="200" Margin="498,673,0,0" VerticalAlignment="Top" Width="1000"/>
        <dxlc:FlowLayoutControl x:Name="FLC_BOTONES" Height="164" Margin="372,695,0,0" VerticalAlignment="Top" Width="1210" HorizontalAlignment="Right" FlowDirection="RightToLeft">
            <Button x:Name="BTN_CANCELAR" Content="Cancelar" HorizontalAlignment="Left" Height="137" VerticalAlignment="Top" Width="286" FontSize="36" Foreground="White" Background="Red" FontWeight="Bold"/>
            <Button x:Name="BTN_GUARDAR" Content="Guardar" HorizontalAlignment="Left" Height="137" VerticalAlignment="Top" Width="286" FontSize="36" Foreground="White" Background="LimeGreen" FontWeight="Bold"/>
            <Button x:Name="BTN_EDITAR" Content="Editar" HorizontalAlignment="Left" Height="137" VerticalAlignment="Top" Width="286" FontSize="36" Foreground="White" Background="DarkOrange" FontWeight="Bold"/>
            <Button x:Name="BTN_NUEVO" Content="Nuevo" HorizontalAlignment="Left" Height="137" VerticalAlignment="Top" Width="286" FontSize="36" Background="DeepSkyBlue" Click="Button_Click" Focusable="False" Foreground="White" FontWeight="Bold"/>
        </dxlc:FlowLayoutControl>

    </Grid>
</Window>
